<p class="centered"><img class="caption" src="{{ quest.image }}" alt=''/></p>
<p><h3>{{ quest.text|safe }}</h3></p>

<script>
    function decision(hash_q, hash_d) {
        $('#data').html('&nbsp;').load('/d/' + hash_q + '/' + hash_d);
    }
    function addClickHandlers_decision() {
        $("#decisions li").click(function() { decision("{{token}}", this.id) });
    }
    $(document).ready(addClickHandlers_decision);
</script>

<ul class="icons" id="decisions">
{% for decision in decisions %}
<li id="{{decision.dec_hash}}">{% if decision.check %}<i class="icon-check icon-2x pull-left">{% else %}<i class="icon-check-empty icon-2x pull-left">
{% endif %}</i >{{ decision.text|safe }}</li>
{% endfor %}
</ul>
